# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
allow-hotplug {{ ansible_default_ipv4.interface }}
auto {{ ansible_default_ipv4.interface }}
iface {{ ansible_default_ipv4.interface }} inet manual

# The bridged interface
auto lxcbr0
iface lxcbr0 inet static
    address {{ ansible_default_ipv4.address }}
    netmask {{ ansible_default_ipv4.netmask }}
    gateway {{ ansible_default_ipv4.gateway }}
    network {{ ansible_default_ipv4.network }}
    dns-nameservers 8.8.8.8
    bridge_ports {{ ansible_default_ipv4.interface }}
    bridge_fd 9
    bridge_hello 2
    bridge_maxage 12
    bridge_stp off
    pre-up brctl addbr lxcbr0
    post-up iptables -A FORWARD -i lxcbr0 -s {{ ansible_default_ipv4.address }}/24 -j ACCEPT
    post-up iptables -A POSTROUTING -t nat -s {{ ansible_default_ipv4.address }}/24 -j MASQUERADE
    # add checksum so that dhclient does not complain.
    # udp packets staying on the same host never have a checksum filled else
    post-up iptables -A POSTROUTING -t mangle -p udp --dport bootpc -s {{ ansible_default_ipv4.address }}/24 -j CHECKSUM --checksum-fill

source /etc/network/interfaces.d/*.cfg

